{
  "name": "js-calculator",
  "version": "2.4.0",
  "type": "module",
  "scripts": {
    "dev": "browser-sync start --server --files '**/*.html, **/*.css, **/*.js' --port 3000 --no-notify",
    "prepare": "husky",
    "test": "echo 'No tests yet' && exit 0",
    "changelog": "changelogen",
    "update-readme": "node tools-gh/update-readme.js",
    "release": "node tools-gh/check-demo-for-release.js && changelogen --release && npm run update-readme",
    "release:patch": "changelogen --release --patch",
    "release:minor": "changelogen --release --minor",
    "release:major": "changelogen --release --major",
    "bugs": "gh issue list --label bug --state open",
    "create-bug": "node tools-gh/create-bug.js",
    "tasks": "gh issue list --label task --state open",
    "create-task": "node tools-gh/create-task.js",
    "all-issues": "gh issue list --state open"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "browser-sync": "^3.0.4",
    "changelogen": "^0.6.2",
    "husky": "^9.1.7"
  }
}
